{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "target": "ES2022",
  "lib": [
    "ES2022",
    "DOM",
    "DOM.Iterable"
  ],
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.tsx",
    "src/preload/*.d.ts",
      "./package.json"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitReturns": false,
    "resolveJsonModule": true,
    "composite": true,
    "jsx": "react-jsx",
    "incremental": true,
    "typeRoots": [
        "./types"
      ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/renderer/*"
      ]
    }
  }
}
